<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background"
    tools:context="kronos.comkronoscodecomandroid.activity.activity.WelcomeActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/welcome_central_image_height"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_welcome_logo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/title_welcome"
        android:paddingRight="10dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/welcome_title_text_size_h"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/welcome_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#ffffffff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/welcome_title_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_title"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/title_2_welcome"
        android:paddingRight="10dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/welcome_title_text_size"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/title_3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_title_2"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="@string/title_3_welcome"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#ffffffff"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/buttonsGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_3"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_go_to_list"
            android:layout_width="@dimen/welcome_screen_button_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn"
            android:text="@string/guide_list"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:padding="20dp"
            android:textSize="@dimen/list_number_text_size_2"
            android:textColor="@drawable/button_text_color" />

        <Button
            android:id="@+id/btn_go_about"
            android:layout_width="@dimen/welcome_screen_button_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:padding="20dp"
            android:background="@drawable/btn"
            android:text="@string/title_activity_about"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="@dimen/list_number_text_size_2"
            android:textColor="@drawable/button_text_color" />

        <Button
            android:id="@+id/btn_go_tutorial"
            android:layout_width="@dimen/welcome_screen_button_width"
            android:layout_height="wrap_content"
            android:background="@drawable/btn"
            android:textStyle="bold"
            android:textSize="@dimen/list_number_text_size_2"
            android:text="@string/tutorial"
            android:padding="20dp"
            android:textAllCaps="true"
            android:textColor="@drawable/button_text_color" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/buttonsGroup"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:gravity="start">

        <ImageView
            android:id="@+id/lutheran"
            android:layout_alignParentBottom="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_welcome_logo_footer" />

    </RelativeLayout>
</RelativeLayout>
